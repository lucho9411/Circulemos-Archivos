package com.daycam.facturar.api.controlles;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.daycam.facturar.api.entities.Usuario;
import com.daycam.facturar.api.services.impl.UsuarioImpl;

@CrossOrigin("*")
@RestController
@RequestMapping("/usuario")
public class UsuarioController {
	
	
	@Autowired
	private UsuarioImpl usuarioImpl;
	/**
	 * Metodos POST 
	 * @param parametro
	 * @return
	 */
	
	@PostMapping(consumes = MediaType.APPLICATION_JSON_VALUE)
    public String saveUsuario(@RequestBody Usuario usuario) {

        return usuarioImpl.save(usuario);

    }

}
